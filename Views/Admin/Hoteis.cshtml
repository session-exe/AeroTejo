@model IEnumerable<AeroTejo.Models.Hotel>
@{ ViewData["Title"] = "Gestão de Hotéis"; }
<div class="container-fluid my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-hotel"></i> Gestão de Hotéis</h2>
        <a asp-action="CreateHotel" class="btn btn-success"><i class="fas fa-plus"></i> Novo Hotel</a>
    </div>
    @if (Model.Any()) {
        <div class="card"><div class="card-body"><div class="table-responsive"><table class="table table-hover">
            <thead><tr><th>ID</th><th>Nome</th><th>Cidade</th><th>Preço/Noite</th><th>Descrição</th><th>Ações</th></tr></thead>
            <tbody>@foreach (var hotel in Model) {
                <tr><td>@hotel.Id</td><td>@hotel.Nome</td><td>@hotel.Cidade</td><td>@hotel.PrecoPorNoite.ToString("C")</td>
                <td>@hotel.Descricao</td><td>
                    <a asp-action="EditHotel" asp-route-id="@hotel.Id" class="btn btn-sm btn-primary"><i class="fas fa-edit"></i></a>
                    <a asp-action="DeleteHotel" asp-route-id="@hotel.Id" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>
                </td></tr>
            }</tbody>
        </table></div></div></div>
    } else {
        <div class="alert alert-info"><i class="fas fa-info-circle"></i> Não existem hotéis registados.</div>
    }
</div>
