@model IEnumerable<AeroTejo.Models.User>
@{ ViewData["Title"] = "Utilizadores"; }
<div class="container-fluid my-4">
    <h2 class="mb-4"><i class="fas fa-users"></i> Utilizadores Registados</h2>
    @if (Model.Any()) {
        <div class="card"><div class="card-body"><div class="table-responsive"><table class="table table-hover">
            <thead><tr><th>ID</th><th>Nome</th><th>E-mail</th><th>Telemóvel</th><th>Idade</th><th>Papel</th></tr></thead>
            <tbody>@foreach (var user in Model) {
                <tr><td>@user.Id</td><td>@user.NomeCompleto</td><td>@user.Email</td>
                <td>@user.Telemovel</td><td>@user.Idade</td>
                <td><span class="badge @(user.Role == "Administrador" ? "bg-danger" : "bg-primary")">@user.Role</span></td></tr>
            }</tbody>
        </table></div></div></div>
    } else {
        <div class="alert alert-info"><i class="fas fa-info-circle"></i> Não existem utilizadores.</div>
    }
</div>
