@model AeroTejo.Models.Voo

@{
    ViewData["Title"] = "Criar Voo";
}

<div class="container my-4">
    <h2><i class="fas fa-plane"></i> Criar Novo Voo</h2>

    <div class="card mt-4">
        <div class="card-body">
            <form asp-action="CreateVoo" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Companhia" class="form-label"></label>
                        <input asp-for="Companhia" class="form-control" />
                        <span asp-validation-for="Companhia" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="DataHora" class="form-label"></label>
                        <input asp-for="DataHora" class="form-control" type="datetime-local" />
                        <span asp-validation-for="DataHora" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Origem" class="form-label"></label>
                        <input asp-for="Origem" class="form-control" />
                        <span asp-validation-for="Origem" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Destino" class="form-label"></label>
                        <input asp-for="Destino" class="form-control" />
                        <span asp-validation-for="Destino" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Preco" class="form-label"></label>
                        <input asp-for="Preco" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="Preco" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="TotalLugares" class="form-label"></label>
                        <input asp-for="TotalLugares" class="form-control" type="number" />
                        <span asp-validation-for="TotalLugares" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Guardar
                    </button>
                    <a asp-action="Voos" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Voltar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
