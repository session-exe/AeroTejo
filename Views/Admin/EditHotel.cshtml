@model AeroTejo.Models.Hotel
@{ ViewData["Title"] = "Editar Hotel"; }

<div class="container my-4">
    <h2><i class="fas fa-hotel"></i> Editar Hotel</h2>
    <div class="card mt-4 shadow-sm">
        <div class="card-body">
            <form asp-action="EditHotel" method="post">
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Nome" class="form-label font-weight-bold"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Cidade" class="form-label font-weight-bold"></label>
                    <input asp-for="Cidade" class="form-control" />
                    <span asp-validation-for="Cidade" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PrecoPorNoite" class="form-label font-weight-bold">Preço por Noite (€)</label>
                    <input asp-for="PrecoPorNoite" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="PrecoPorNoite" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Descricao" class="form-label font-weight-bold"></label>
                    <textarea asp-for="Descricao" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Guardar</button>
                    <a asp-action="Hoteis" class="btn btn-outline-secondary">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>