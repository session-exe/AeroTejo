@model IEnumerable<AeroTejo.Models.Reserva>

    <div class="container mt-5">
        <h2 class="mb-4">Gestão de Reservas</h2>

        <div class="table-responsive">
            <table class="table table-hover shadow-sm">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Cliente</th>
                        <th>Voo</th>
                        <th>Data</th>
                        <th>Total</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                {
                    <tr>
                        <td>#@item.Id</td>
                        <td>@item.User?.NomeCompleto</td>
                        <td>@item.Voo?.Origem ➝ @item.Voo?.Destino</td>
                        <td>@item.DataReserva.ToString("dd/MM/yyyy")</td>
                        <td>@item.ValorTotal.ToString("C")</td>
                        <td>
                            <form asp-action="DeleteReserva" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Apagar esta reserva libertará os assentos. Continuar?');">
                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                    <i class="fa fa-trash"></i> Apagar
                                </button>
                            </form>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
