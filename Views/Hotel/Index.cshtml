@model IEnumerable<AeroTejo.Models.Hotel>

@{
    ViewData["Title"] = "Hotéis Disponíveis";
    var cidadeFiltro = ViewBag.CidadeFiltro as string;
    var vooSelecionado = ViewBag.VooSelecionado as AeroTejo.Models.Voo;
}

<div class="container my-5">
    @if (vooSelecionado != null)
    {
        <div class="alert alert-success">
            <i class="fas fa-check-circle"></i> 
            <strong>Voo Selecionado:</strong> @vooSelecionado.Origem → @vooSelecionado.Destino 
            (@vooSelecionado.DataHora.ToString("dd/MM/yyyy"))
        </div>
    }

    <h2 class="mb-4">
        <i class="fas fa-hotel"></i> Hotéis Disponíveis
        @if (!string.IsNullOrEmpty(cidadeFiltro))
        {
            <span class="text-muted">em @cidadeFiltro</span>
        }
    </h2>

    @if (Model.Any())
    {
        <div class="row g-4">
            @foreach (var hotel in Model)
            {
                <div class="col-md-6">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">
                                <i class="fas fa-building text-primary"></i> @hotel.Nome
                            </h5>
                            <hr>
                            <p class="mb-2">
                                <i class="fas fa-map-marker-alt"></i> 
                                <strong>Localização:</strong> @hotel.Cidade
                            </p>
                            <p class="mb-3">
                                <i class="fas fa-info-circle"></i> 
                                <strong>Descrição:</strong> @hotel.Descricao
                            </p>
                            <p class="mb-3">
                                <i class="fas fa-euro-sign"></i> 
                                <strong>Preço por Noite:</strong> <span class="text-primary fs-4">@hotel.PrecoPorNoite.ToString("C")</span>
                            </p>
                            <form asp-controller="Hotel" asp-action="SelectHotel" method="post">
                                <input type="hidden" name="hotelId" value="@hotel.Id" />
                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="fas fa-check-circle"></i> Selecionar Hotel
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="text-center mt-4">
            <form asp-controller="Hotel" asp-action="SelectHotel" method="post">
                <button type="submit" class="btn btn-outline-secondary">
                    <i class="fas fa-times-circle"></i> Continuar sem Hotel
                </button>
            </form>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> 
            Não foram encontrados hotéis disponíveis
            @if (!string.IsNullOrEmpty(cidadeFiltro))
            {
                <text>em @cidadeFiltro</text>
            }.
        </div>
        <div class="text-center">
            <form asp-controller="Hotel" asp-action="SelectHotel" method="post">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-arrow-right"></i> Continuar sem Hotel
                </button>
            </form>
        </div>
    }
</div>
