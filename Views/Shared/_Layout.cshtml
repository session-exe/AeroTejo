@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var userId = HttpContextAccessor.HttpContext?.Session.GetInt32("UserId");
    var userName = HttpContextAccessor.HttpContext?.Session.GetString("UserName");
    var userRole = HttpContextAccessor.HttpContext?.Session.GetString("UserRole");
    bool isAuthenticated = userId.HasValue;
    bool isAdmin = userRole == "Administrador";
    bool isPassageiro = userRole == "Passageiro";
}

<!DOCTYPE html>
<html lang="pt" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AeroTejo</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <link rel="stylesheet" href="~/css/aerotejo.css" asp-append-version="true" />

    <style>
        /* 1. Forçar fundo branco */
        body, main, .card {
            background-color: #ffffff !important;
        }

        /* 2. OBRIGAR todo o texto comum a ser preto */
        body, p, span, div, li, td, th, label {
            color: #212529 !important;
        }

        /* 3. Inputs BRANCOS com texto PRETO */
        input, select, textarea, .form-control, .form-select {
            background-color: #ffffff !important;
            color: #000000 !important;
            border: 1px solid #ced4da !important;
        }

            input:focus, select:focus, textarea:focus, .form-control:focus {
                background-color: #ffffff !important;
                color: #000000 !important;
                border-color: #86b7fe !important;
                box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25) !important;
            }

        ::placeholder {
            color: #6c757d !important;
            opacity: 1 !important;
        }

        /* 4. Títulos pretos */
        h1, h2, h3, h4, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6, .card-title, .card-header {
            color: #212529 !important;
        }

        /* 5. Bordas nos cartões */
        .card {
            border: 1px solid #dee2e6 !important;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075) !important;
        }

        /* 6. Navbar e Botões */
        .navbar {
            background-color: #6f42c1 !important;
        }

            .navbar * {
                color: rgba(255,255,255,0.9) !important;
            }

        .btn-primary {
            color: #ffffff !important;
        }

        /* 7. Links soltos */
        main a:not(.btn):not(.nav-link) {
            color: #0d6efd !important;
        }
    </style>

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-plane-departure"></i> AeroTejo
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        @if (!isAuthenticated)
                        {
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i> Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Voo" asp-action="Index"><i class="fas fa-plane"></i> Voos</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Hotel" asp-action="Index"><i class="fas fa-hotel"></i> Hotéis</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Login"><i class="fas fa-sign-in-alt"></i> Login</a></li>
                        <li class="nav-item"><a class="nav-link btn btn-light text-primary fw-bold ms-2" style="color: #6f42c1 !important;" asp-controller="Account" asp-action="Register"><i class="fas fa-user-plus"></i> Registo</a></li>
                        }
                        else if (isAdmin)
                        {
                        <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Dashboard"><i class="fas fa-chart-line"></i> Dashboard</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Voos"><i class="fas fa-plane"></i> Voos</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Reservas"><i class="fas fa-calendar-check"></i> Reservas</a></li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-user-shield"></i> @userName
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" style="color: #212529 !important;" asp-controller="Account" asp-action="Logout"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
                            </ul>
                        </li>
                        }
                        else if (isPassageiro)
                        {
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i> Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Voo" asp-action="Index"><i class="fas fa-plane"></i> Voos</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Hotel" asp-action="Index"><i class="fas fa-hotel"></i> Hotéis</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Reserva" asp-action="MinhasReservas"><i class="fas fa-calendar-check"></i> Reservas</a></li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-user"></i> @userName
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" style="color: #212529 !important;" asp-controller="Account" asp-action="Logout"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
                            </ul>
                        </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @if (TempData["SuccessMessage"] != null)
        {
        <div class="container mt-3">
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
        <div class="container mt-3">
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        </div>
        }

        @RenderBody()
    </main>

    <footer class="footer mt-5 py-3 border-top bg-light">
        <div class="container text-center">
            <p class="mb-0 text-muted" style="color: #6c757d !important;">&copy; 2026 AeroTejo - Sistema de Gestão de Agência de Viagens Aéreas</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>