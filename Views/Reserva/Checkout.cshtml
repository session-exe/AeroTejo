@model AeroTejo.ViewModels.CheckoutViewModel
@using Microsoft.AspNetCore.Http
@using System.Text.Json
@using AeroTejo.ViewModels
@inject IHttpContextAccessor HttpContextAccessor

@{
    // Ler passageiros da sessão para mostrar no resumo
    var sessionJson = HttpContextAccessor.HttpContext?.Session.GetString("Reserva_Passageiros");
    var listaPassageiros = new List<PassageiroInfo>();
    if(!string.IsNullOrEmpty(sessionJson)) {
        listaPassageiros = JsonSerializer.Deserialize<List<PassageiroInfo>>(sessionJson) ?? new();
    }
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4 order-md-2 mb-4">
            <h4 class="d-flex justify-content-between align-items-center mb-3">
                <span class="text-primary">Resumo</span>
                <span class="badge bg-primary rounded-pill">@ViewBag.TotalPassageiros pax</span>
            </h4>
            <ul class="list-group mb-3">
                <li class="list-group-item">
                    <h6 class="my-0">Voo (@ViewBag.Voo.Companhia)</h6>
                    <small class="text-muted">@ViewBag.Voo.Origem para @ViewBag.Voo.Destino</small>

                    <div class="mt-2 pt-2 border-top">
                        <small><strong>Passageiros:</strong></small>
                        <ul class="list-unstyled mb-0 small text-muted">
                            @foreach(var p in listaPassageiros) {
                            <li>• @p.NomeCompleto (@p.AssentoSelecionado)</li>
                        }
                        </ul>
                    </div>
                </li>

                @if (ViewBag.Hotel != null)
                {
                <li class="list-group-item d-flex justify-content-between lh-sm">
                    <div>
                        <h6 class="my-0">Hotel (@ViewBag.Hotel.Nome)</h6>
                        <small class="text-muted">@ViewBag.NumNoites Noite(s)</small>
                    </div>
                    <span class="text-muted">@((ViewBag.Hotel.PrecoPorNoite * ViewBag.NumNoites).ToString("C"))</span>
                </li>
                }

                <li class="list-group-item d-flex justify-content-between bg-light">
                    <span class="text-success">Total a Pagar</span>
                    <strong class="text-success">@ViewBag.ValorTotal.ToString("C")</strong>
                </li>
            </ul>
        </div>

        <div class="col-md-8 order-md-1">
            <h4 class="mb-3">Pagamento & Faturação</h4>
            <form asp-action="Checkout" method="post">

                <div class="row g-3">
                    <div class="col-sm-6">
                        <label asp-for="NomeCartao" class="form-label">Nome no Cartão</label>
                        <input asp-for="NomeCartao" class="form-control" placeholder="Como aparece no cartão" />
                        <span asp-validation-for="NomeCartao" class="text-danger"></span>
                    </div>

                    <div class="col-sm-6">
                        <label asp-for="NumeroCartao" class="form-label">Número do Cartão</label>
                        <input asp-for="NumeroCartao" class="form-control" placeholder="0000 0000 0000 0000" maxlength="19" />
                        <span asp-validation-for="NumeroCartao" class="text-danger"></span>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="Validade" class="form-label">Validade</label>
                        <input asp-for="Validade" class="form-control" id="cc-validade" placeholder="MM/AA" maxlength="5" />
                        <span asp-validation-for="Validade" class="text-danger"></span>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="CVV" class="form-label">CVV</label>
                        <input asp-for="CVV" class="form-control" placeholder="123" maxlength="4" />
                        <span asp-validation-for="CVV" class="text-danger"></span>
                    </div>
                </div>

                <hr class="my-4">

                <h5 class="mb-3">Dados Fiscais</h5>
                <div class="row g-3">
                    <div class="col-12">
                        <label asp-for="Nome" class="form-label">Nome Completo</label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="Morada" class="form-label">Morada</label>
                        <input asp-for="Morada" class="form-control" />
                        <span asp-validation-for="Morada" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="NIF" class="form-label">NIF <span class="text-muted">(Opcional)</span></label>
                        <input asp-for="NIF" class="form-control" placeholder="123456789" />
                        <span asp-validation-for="NIF" class="text-danger"></span>
                    </div>
                </div>

                <hr class="my-4">
                <button class="w-100 btn btn-primary btn-lg" type="submit">Confirmar e Pagar</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.getElementById('cc-validade').addEventListener('input', function (e) {
            var input = e.target;
            var val = input.value.replace(/\D/g, '');
            if (val.length > 2) {
                input.value = val.substring(0, 2) + '/' + val.substring(2, 4);
            } else {
                input.value = val;
            }
        });
    </script>
}