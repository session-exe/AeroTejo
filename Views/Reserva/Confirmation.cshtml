@model AeroTejo.Models.Reserva
@using System.Text.Json
@using AeroTejo.ViewModels

<div class="container mt-5">
    <div class="alert alert-success text-center">
        <h1><i class="bi bi-check-circle-fill"></i> Reserva Confirmada!</h1>
        <p class="lead">Obrigado pela sua preferência, @Model.Faturacao?.Nome.</p>
    </div>

    <div class="card mb-4">
        <div class="card-header bg-primary text-white">Detalhes da Viagem</div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h5>Voo</h5>
                    <p><strong>Companhia:</strong> @Model.Voo?.Companhia</p>
                    <p><strong>De:</strong> @Model.Voo?.Origem <strong>Para:</strong> @Model.Voo?.Destino</p>
                    <p><strong>Data:</strong> @Model.Voo?.DataHora.ToString("dd/MM/yyyy HH:mm")</p>
                </div>
                <div class="col-md-6">
                    <h5>Alojamento</h5>
                    @if (Model.Hotel != null)
                    {
                    <p><strong>Hotel:</strong> @Model.Hotel.Nome</p>
                    <p><strong>Check-in:</strong> @Model.DataCheckIn.ToShortDateString()</p>
                    <p><strong>Check-out:</strong> @Model.DataCheckOut.ToShortDateString()</p>
                    }
                    else
                    {
                    <p class="text-muted">Sem hotel selecionado.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">Lista de Passageiros</div>
        <div class="card-body p-0">
            <table class="table table-striped mb-0">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Documento</th>
                        <th>Assento</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        // DESERIALIZAR O JSON PARA LISTA
                        List<PassageiroInfo> listaPassageiros = new();
                        try {
                            if (!string.IsNullOrEmpty(Model.DadosPassageiros)) {
                                listaPassageiros = JsonSerializer.Deserialize<List<PassageiroInfo>>(Model.DadosPassageiros) ?? new();
                            }
                        } catch { }
                    }

                    @foreach (var p in listaPassageiros)
                    {
                    <tr>
                        <td>@p.NomeCompleto</td>
                        <td>@p.NumeroDocumento</td>
                        <td><span class="badge bg-info text-dark">@p.AssentoSelecionado</span></td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="d-flex justify-content-between">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Voltar à Home</a>
        <a asp-action="DownloadFatura" asp-route-id="@Model.Id" class="btn btn-outline-danger btn-lg">
            <i class="bi bi-file-earmark-pdf-fill"></i> Baixar Fatura PDF
        </a>
    </div>
</div>