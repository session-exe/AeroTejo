@model IEnumerable<AeroTejo.Models.Reserva>

    <div class="container mt-5">
        <h2 class="mb-4">Minhas Reservas</h2>

        @if (!Model.Any())
    {
        <div class="alert alert-info">Ainda não efetuou nenhuma reserva.</div>
    }
    else
    {
        @foreach (var item in Model)
        {
        <div class="card mb-3 shadow-sm">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <span>Reserva #@item.Id - @item.DataReserva.ToShortDateString()</span>
                <span class="badge bg-light text-dark">@item.ValorTotal.ToString("C")</span>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-8">
                        <h5 class="card-title">@item.Voo?.Origem ➝ @item.Voo?.Destino</h5>
                        <p class="card-text">
                            <strong>Data Voo:</strong> @item.Voo?.DataHora.ToString("dd/MM/yyyy HH:mm")<br />
                            <strong>Hotel:</strong> @(item.Hotel?.Nome ?? "Sem Hotel")
                        </p>
                    </div>
                    <div class="col-md-4 text-end">
                        <a asp-action="DownloadFatura" asp-route-id="@item.Id" class="btn btn-sm btn-success mb-2 w-100">
                            <i class="fa fa-file-pdf"></i> Fatura
                        </a>

                        <form asp-action="Cancelar" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Tem a certeza que deseja cancelar esta reserva?');">
                            <button type="submit" class="btn btn-sm btn-outline-danger w-100">
                                <i class="fa fa-times"></i> Cancelar Reserva
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        }
    }
    </div>
