@model IEnumerable<AeroTejo.Models.Reserva>
    @using System.Text.Json
    @using AeroTejo.ViewModels

    <div class="container mt-5">
        <h2>Minhas Reservas</h2>

        @if (!Model.Any())
    {
        <div class="alert alert-info">Ainda n√£o tem reservas efetuadas.</div>
    }
    else
    {
        @foreach (var reserva in Model)
        {
        <div class="card mb-4 shadow-sm">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span><strong>Reserva #@reserva.Id</strong> - @reserva.DataReserva.ToShortDateString()</span>
                <span class="badge bg-success">@reserva.ValorTotal.ToString("C")</span>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <h6 class="text-primary">Voo</h6>
                        <p class="mb-1">@reserva.Voo?.Origem <i class="bi bi-arrow-right"></i> @reserva.Voo?.Destino</p>
                        <small class="text-muted">@reserva.Voo?.Companhia - @reserva.Voo?.DataHora.ToString("g")</small>
                    </div>
                    <div class="col-md-4">
                        <h6 class="text-primary">Hotel</h6>
                        @if (reserva.Hotel != null)
                            {
                        <p class="mb-1">@reserva.Hotel.Nome</p>
                        <small class="text-muted">@reserva.DataCheckIn.ToShortDateString() a @reserva.DataCheckOut.ToShortDateString()</small>
                            }
                            else
                            {
                        <span class="text-muted">Nenhum</span>
                            }
                    </div>
                    <div class="col-md-4">
                        <h6 class="text-primary">Passageiros</h6>
                        <ul class="list-unstyled small">
                            @{
                                    List<PassageiroInfo> ps = new();
                                    try {
                                        if(!string.IsNullOrEmpty(reserva.DadosPassageiros)) {
                                            ps = JsonSerializer.Deserialize<List<PassageiroInfo>>(reserva.DadosPassageiros) ?? new();
                                        }
                                    } catch {}
                            }
                            @foreach(var p in ps)
                                {
                            <li><i class="bi bi-person"></i> @p.NomeCompleto (Assento: <strong>@p.AssentoSelecionado</strong>)</li>
                                }
                        </ul>
                    </div>
                </div>
            </div>
            <div class="card-footer text-end">
                <a asp-action="Confirmation" asp-route-id="@reserva.Id" class="btn btn-sm btn-outline-primary">Ver Detalhes / Fatura</a>
            </div>
        </div>
        }
    }
    </div>
